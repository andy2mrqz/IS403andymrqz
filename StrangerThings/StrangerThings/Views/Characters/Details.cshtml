@model StrangerThings.Models.Character  

@{
    ViewBag.Title = Model.CharacterFirstName + ' ' + Model.CharacterLastName;
}

<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb layout">
        <li class="breadcrumb-item">@Html.ActionLink("Characters", "Index", "Characters", null, new { @class="redtext" })</li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>

<div class="row">
    <div class="col-md-4">
        @*Display the character image*@
        <img class="img-responsive img-rounded" src="@Model.PhotoLocation" />
    </div>
    <div class="col-md-8">
        @*Show the first name and last name for the character*@
        <h2>@Model.CharacterFirstName @Model.CharacterLastName</h2>

        @*Show the character description*@
        <p>@Model.CharacterDescription</p>

        @*Display character attributes*@
        <p><b>Year of Birth:</b> @Model.YearOfBirth</p>

        <p><b>Gender:</b> @Model.Gender</p>

        <p><b>Hometown:</b> @Model.Hometown</p>

        <p><b>Occupation:</b> @Model.Occupation</p>

        <p><b>Actor:</b> @Model.Actor</p>

        <p><b>Quote:</b> @Model.Quote</p>


        @*Display options to edit, delete, or go back to character list*@
        @Html.ActionLink("Edit", "Edit", "Characters", new { id = Model.CharacterID }, new { @class = "redtext" }) |
        @Html.ActionLink("Delete", "Delete", "Characters", new { id = Model.CharacterID }, new { @class = "redtext" }) |
        @Html.ActionLink("Back to Characters", "Index", "Characters", null, new { @class = "redtext" })

        <!--Navigates to the Index method in the Questions controller.  Passes in the character id of the current character-->
        <h3>@Html.ActionLink(@Model.CharacterFirstName + " " + @Model.CharacterLastName + " FAQs", "Index", "Questions", new { id = Model.CharacterID }, new { @class = "btn btn-red" })</h3>

    </div>
</div>
