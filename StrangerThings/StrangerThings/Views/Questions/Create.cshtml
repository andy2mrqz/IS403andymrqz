@model StrangerThings.Models.Question

@{
    ViewBag.Title = "Ask a Question";
}

<!--Breadcrumb-->
<nav aria-label="breadcrumb" role="navigation">
    <ol class="breadcrumb layout">
        <li class="breadcrumb-item">@Html.ActionLink("Home", "Index", "Home", null, new { @class = "redtext" })</li>
        <li class="breadcrumb-item">@Html.ActionLink("Characters", "Index", "Characters", null, new { @class = "redtext" })</li>
        <li class="breadcrumb-item">@Html.ActionLink((string)ViewBag.CharacterFullName, "Details", "Characters", new { id = ViewBag.Character.CharacterID }, new { @class = "redtext" })</li>
        <li class="breadcrumb-item">@Html.ActionLink("FAQs", "Index", "Questions", new { id = ViewBag.Character.CharacterID }, new { @class = "redtext" })</li>
        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
    </ol>
</nav>


<div class="row">
    <div class="col-md-4 col-sm-6">
        @*Display the character image*@
        <img class="img-responsive img-rounded" src="@ViewBag.Character.PhotoLocation" />
    </div>
    <div class="col-md-8 col-sm-6">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h2>Question</h2>
                <hr />

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="hidden" value="@ViewBag.Character.CharacterID" name="CharacterID" />
                        <input type="hidden" value="1" name="UserID" />
                        @Html.TextAreaFor(m => m.QuestionDescription, new { @class = "text-danger", rows="10", style = "border:1px solid #999999; width:100%; height: margin: 5px 0; padding: 3px; " })

                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                    <input type="submit" value="Submit" class="btn btn-red"/>
                    @Html.ActionLink("Return to FAQs", "Index", "Questions", new { id = ViewBag.Character.CharacterID }, new { @class = "btn btn-red" })
                    </div>
                </div>
            </div>

        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }

    </div>
</div>



