@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Stranger Things</h1>
    <p><img src="https://static.lootcrate.com/yrk2x9n6p9s5/56Yx9gPZ9mW0oSmcsmSM4u/6b82ff860b8bdf79b13fc45dbe914002/gallery_01.jpg"/></p>
    <p><a href="https://asp.net" class="btn btn-primary btn-lg">Stranger Things is Cool &raquo;</a></p>
